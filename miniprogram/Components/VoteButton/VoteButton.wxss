.vote-container {
  width: 100%;
  height: 400rpx;
  padding: 15rpx;
}
.vote-container .vote {
  display: flex;
  position: relative;
  overflow: hidden;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
  justify-items: center;
  text-align: center;
  background: #FFF;
  border-radius: 10rpx;
  box-shadow: 1px 1px 3px #cacaca;
}
.vote-container .vote.button-hover {
  box-shadow: -1px -1px 3px #cacaca;
  transform: translate(1rpx, 2rpx);
}
.vote-container .vote image {
  width: 35%;
  margin: 0 auto;
}
.vote-container .vote .vote-button {
  width: 250rpx;
  line-height: 65rpx;
  margin: 0 auto;
  color: #FFF;
  background-color: var(--themeColor);
}
.vote-container .vote .vote-hand-container {
  position: absolute;
  left: 50%;
  top: 100%;
  font-size: 0;
  transform: translateX(-50%);
  transform-origin: center 150%;
}
.vote-container .vote .vote-hand-container image {
  width: 80rpx;
  margin: 0 10rpx;
}
