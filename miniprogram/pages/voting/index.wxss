.vote-container .vote-header {
  padding: 70rpx 25rpx 30rpx 25rpx;
  word-break: break-all;
}
.vote-container .vote-header .vote-title {
  font-size: 60rpx;
  padding-bottom: 10rpx;
}
.vote-container .vote-header .vote-description .vote-mode {
  color: var(--themeColor);
}
.vote-container .vote-results .vote-option .option-content {
  position: relative;
  display: flex;
  line-height: 110rpx;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-top: 25rpx;
  background-color: #FFF;
  box-shadow: 0px 2px 2px #eaeaea;
}
.vote-container .vote-results .vote-option .option-content .option-name {
  display: flex;
  align-items: center;
}
.vote-container .vote-results .vote-option .option-content .option-name text {
  margin-right: 20rpx;
}
.vote-container .vote-results .vote-option .option-content .vote-count {
  display: flex;
  width: 172rpx;
  justify-content: space-between;
  font-size: 24rpx;
  text-align: right;
}
.vote-container .vote-results .vote-option .option-content .vote-count .count {
  width: 98rpx;
}
.vote-container .vote-results .vote-option .option-content .vote-count .percent {
  width: 74rpx;
}
.vote-container .vote-results .vote-option .option-content .bottom-line {
  position: absolute;
  height: 4rpx;
  bottom: 0;
  background-color: var(--themeColor);
  transition: width 0.2s;
}
.vote-container .vote-results .vote-option .vote-user {
  margin-top: 10rpx;
}
.vote-container .bottom-text {
  margin-top: 10rpx;
  padding: 0 15rpx;
  font-size: 26rpx;
  color: #9a9a9a;
}
.vote-container .bottom-text .outDate {
  text-align: center;
}
