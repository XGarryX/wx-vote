.user {
  height: 100%;
}
.user .login-container {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.user .login-container .login-content {
  text-align: center;
}
.user .login-container .login-content .login-tips {
  line-height: 68rpx;
  font-size: 30rpx;
  color: 5f5f5f;
}
.user .login-container .login-content .login-button {
  min-height: auto;
  line-height: 60rpx;
  padding: 0;
  margin-top: 10rpx;
  background-color: var(--themeColor);
  border-radius: 0;
  color: #FFF;
  font-weight: 300;
  font-size: 32rpx;
}
.user .voting-container .voting-record .vote-list {
  background-color: #FFF;
}
.user .voting-container .voting-record .vote-list .vote-text {
  display: flex;
  line-height: 100rpx;
  padding: 0 35rpx;
  justify-content: space-between;
  border-bottom: 1px solid #e8e8e8;
  font-size: 26rpx;
  color: #7b7b7b;
}
.user .voting-container .voting-record .vote-list .vote-text .vote-title {
  flex: 4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.user .voting-container .voting-record .vote-list .vote-text .vote-count {
  flex: 1;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.user .voting-container .voting-record .vote-list .vote-drawer {
  display: flex;
  height: 100rpx;
  padding: 0 35rpx;
  border-bottom: 1px solid #e8e8e8;
}
.user .voting-container .voting-record .vote-list .vote-drawer .drawer-button {
  flex: 1;
  text-align: center;
}
.user .voting-container .voting-record .vote-list .vote-drawer .drawer-button button {
  width: 100%;
  height: 100%;
  min-height: 0;
  padding: 0;
  background-color: inherit;
  font-weight: initial;
  line-height: initial;
}
.user .voting-container .voting-record .vote-list .vote-drawer .drawer-button .iconfont {
  display: block;
  color: var(--themeColor);
}
.user .voting-container .voting-record .vote-list .vote-drawer .drawer-button .iconfont.icon-edit {
  font-size: 52rpx;
  margin-top: 8rpx;
  line-height: 52rpx;
}
.user .voting-container .voting-record .vote-list .vote-drawer .drawer-button .iconfont.icon-list {
  font-size: 44rpx;
  margin-top: 10rpx;
}
.user .voting-container .voting-record .vote-list .vote-drawer .drawer-button .iconfont.icon-share {
  font-size: 44rpx;
  margin-top: 10rpx;
}
.user .voting-container .voting-record .vote-list .vote-drawer .drawer-button .iconfont.icon-delete {
  font-size: 53rpx;
  margin-top: 8rpx;
  line-height: 52rpx;
}
.user .voting-container .voting-record .vote-list .vote-drawer .drawer-button .drawer-text {
  font-size: 22rpx;
  color: #3c3c3c;
}
.user .voting-container .bottom-text {
  margin-top: 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #9a9a9a;
}
