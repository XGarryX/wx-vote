<view class="card vote-detail">
    <input placeholder="投票标题" class="item vote-title" />
    <input placeholder="投票说明(选填)" class="item vote-description" />
    <view class="option-container">
        <view class="option-list">
            <view
                class="option-item"
                wx:for="{{optionList}}"
                wx:key="id"
            >
                <view class="icon-box">
                    <i
                        class="iconfont icon-minus"
                        bindtap="handleMinusTap"
                        data-index="{{index}}"
                        wx:if="{{index >= 2}}"
                    />
                </view>
                <input
                    class="item"
                    placeholder="选项"
                    bindinput="handleOptionInput"
                    data-index="{{index}}"
                />
            </view>
        </view>
        <view class="add-option" bindtap="handleAddOption">
            <i class="iconfont icon-add"></i>
            <text>添加选项</text>
        </view>
    </view>
</view>

<view class="card vote-setup">
    <view class="item setup-date">
        <text>截止日期</text>
        <picker mode="date" bindchange="handlePickDate">
            <text class="date-text">{{date}}</text>
        </picker>
    </view>
    <view class="item">
        <text>匿名投票</text>
        <switch color="#5ed2de" value="{{isAnonymous}}" bindchange="handleIsAnonymousChange" />
    </view>
    <view class="item">
        <text>限制传播</text>
        <switch color="#5ed2de" value="{{isLimit}}" bindchange="handleIsLimitChange" />
    </view>
</view>

<view class="complate-button">完成</view>